<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/blank_category_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/blank_mug"/>

    <ImageView
        android:id="@+id/selected_design_image"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:maxWidth="90dp"
        android:maxHeight="100dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/blank_mug"
        app:layout_constraintBottom_toBottomOf="@id/blank_category_item"
        app:layout_constraintEnd_toEndOf="@id/blank_category_item"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="@id/blank_category_item"
        app:layout_constraintTop_toTopOf="@id/blank_category_item"
        app:layout_constraintVertical_bias="0.422" />
</androidx.constraintlayout.widget.ConstraintLayout>