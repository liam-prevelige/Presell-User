<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="20dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_clock"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkBackground"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/profile_pic"
        android:text="My Name"/>

    <Button
        android:id="@+id/settings_text"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBackground"
        android:drawableStart="@drawable/ic_settings_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:layout_below="@id/name_text"
        android:text="Buyer Settings"/>

    <View
        android:id="@+id/divider0"
        android:layout_width="match_parent"
        android:layout_below="@id/settings_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/seller_text"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBackground"
        android:drawableStart="@drawable/ic_bank_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:layout_below="@id/divider0"
        android:text="Seller Hub"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_below="@id/seller_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/edit_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBackground"
        android:background="@android:color/white"
        android:drawableStart="@drawable/ic_edit_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:layout_below="@id/divider1"
        android:padding="10dp"
        android:shadowColor="@color/darkBackground"
        android:layout_marginBottom="10dp"
        android:text="Edit Account Info"/>

    <Button
        android:id="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/edit_info_text"
        android:drawableStart="@drawable/ic_help"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:textColor="@color/darkBackground"
        android:text="Help"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_below="@id/help_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/tc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:background="@android:color/white"
        android:drawableStart="@drawable/ic_privacy_tip_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:textColor="@color/darkBackground"
        android:text="Terms &amp; Conditions"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_below="@id/tc_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/privacy_policy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:drawableStart="@drawable/ic_text_snippet_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:shadowColor="@color/darkBackground"
        android:layout_marginBottom="10dp"
        android:textColor="@color/darkBackground"
        android:padding="10dp"
        android:text="Privacy Policy"/>
</RelativeLayout>
</ScrollView>