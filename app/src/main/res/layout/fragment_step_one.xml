<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/what_to_sell_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/lightBlue"
        android:text="What do you want to sell?"/>
    <ListView
        android:id="@+id/choose_categories_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fui_auth_method_button_drawablePadding"
        android:layout_below="@id/what_to_sell_text"/>
    <Button
        android:id="@+id/confirm_categories_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_categories_list_view"
        android:background="@drawable/button_rounded_corners"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="Confirm"/>
</RelativeLayout>