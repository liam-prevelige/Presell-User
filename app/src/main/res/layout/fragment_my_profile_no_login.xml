<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_clock"
        app:srcCompat="@drawable/circle" />

    <LinearLayout
        android:id="@+id/account_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_corners"
            android:backgroundTint="@color/lightBlue"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"
            android:text="Sign Up" />
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightBlue"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_corners"
            android:textAllCaps="false"
            android:text="Log In" />
    </LinearLayout>

    <Button
        android:id="@+id/settings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBackground"
        android:drawableStart="@drawable/ic_settings_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:layout_below="@id/account_button_container"
        android:text="Buyer Settings"/>

    <View
        android:id="@+id/divider0"
        android:layout_width="match_parent"
        android:layout_below="@id/settings_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/seller_text"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBackground"
        android:drawableStart="@drawable/ic_bank_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:layout_below="@id/divider0"
        android:text="Seller Hub"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_below="@id/seller_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/edit_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBackground"
        android:layout_below="@id/divider1"
        android:drawableStart="@drawable/ic_help"
        android:drawablePadding="5dp"
        android:background="@android:color/white"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:shadowColor="@color/darkBackground"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:text="Help"/>

    <Button
        android:id="@+id/tc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_text"
        android:drawableStart="@drawable/ic_text_snippet_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:padding="10dp"
        android:textColor="@color/darkBackground"
        android:text="Terms &amp; Conditions"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_below="@id/tc_text"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/privacy_policy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:background="@android:color/white"
        android:drawableStart="@drawable/ic_privacy_tip_24px"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkBackground"
        android:drawableEnd="@drawable/ic_chevron_right_24px"
        android:shadowColor="@color/darkBackground"
        android:padding="10dp"
        android:textColor="@color/darkBackground"
        android:text="Privacy Policy"/>

</RelativeLayout>