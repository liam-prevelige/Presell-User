<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="@color/darkBackground"
            android:layout_height="match_parent"
            android:text="Title"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/postViewPager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_below="@id/title_text"
            android:contentDescription="Main Feed Picture" />

        <LinearLayout
            android:id="@+id/text_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/postViewPager"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_headshot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="end"
                android:baselineAlignBottom="true"
                android:src="@drawable/circle"
                android:contentDescription="outline" />

            <TextView
                android:id="@+id/user_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/darkBackground"
                android:layout_margin="10dp"
                android:layout_weight="40"
                android:textSize="18sp"
                android:textColor="@color/darkBackground"
                android:hint="By _________"/>
            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="end"
                android:baselineAlignBottom="true"
                android:tint="@color/lighterRed"
                android:src="@drawable/ic_favorite_border_24px"
                android:contentDescription="outline" />
        </LinearLayout>

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_linear_layout"
            android:textColor="@color/lightBlue"
            android:textStyle="bold"
            android:text="Category"/>

        <SeekBar
            android:id="@+id/seek_bar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_text"
            android:max="5"
            android:progress="2" />

        <TextView
            android:id="@+id/price_text"
            android:layout_below="@id/seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBackground"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:text="$X"/>

        <TextView
            android:id="@+id/time_estimate_text"
            android:layout_below="@id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:text="Estimated time remaining: X Days"/>

        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_estimate_text"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkBackground"
                android:layout_marginEnd="5dp"
                android:text="Quantity: "/>
            <EditText
                android:id="@+id/quantity_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:paddingStart="10dp"
            android:textColor="@color/darkBackground"
            android:paddingEnd="10dp"
            android:text="Place Order"
            android:background="@drawable/button_rounded_corners"/>
    </RelativeLayout>

</ScrollView>