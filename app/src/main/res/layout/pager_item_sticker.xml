<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/blank_category_item"
        android:layout_width="200dp"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/blank_sticker" />

    <ImageView
        android:id="@+id/selected_design_image"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:maxWidth="134dp"
        android:maxHeight="134dp"
        android:rotation="-4"
        app:layout_constraintStart_toStartOf="@id/blank_category_item"
        app:layout_constraintEnd_toEndOf="@id/blank_category_item"
        app:layout_constraintTop_toTopOf="@id/blank_category_item"
        app:layout_constraintBottom_toBottomOf="@id/blank_category_item"
        android:src="@drawable/blank_mug"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>